{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Domestic Visitors by State Visited in 2023",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "output.json",
    "format": {"type": "topojson", "feature": "my"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "data.csv"
        },
        "key": "State",
        "fields": ["Visitors"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
        
      "field": "Visitors",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0, 5000, 13000, 17000, 20000],
        "range": [
      "#f7fbff",   
      "#c6dbef",   
      "#9ecae1",   
      "#6baed6",   
      "#2171b5",  
      "#08306b"    
    ]
      },
      "legend": {"title": "Number of Domestic Visitors"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
    {"field": "Visitors", "type": "quantitative", "title": "Visitor Count"}
    ]
  }
}

